<Page
    x:Class="Progcomp1_q1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Progcomp1_q1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Margin="60,60,60,0" TextWrapping="Wrap" Text="Alien Communique" VerticalAlignment="Top" Height="49" FontSize="36"/>
        <TextBox x:Name="cipherText" Margin="60,114,60,0" TextChanged="cipherText_TextChanged" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Margin="60,230,60,0" TextWrapping="Wrap" Text="Clear text" VerticalAlignment="Top" Height="49" FontSize="36"/>
        <TextBox x:Name="clearText" Margin="60,284,60,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Page>
